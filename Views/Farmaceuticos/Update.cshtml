@model Farmaceuticos
@{ Layout = "/Views/Shared/Layout.cshtml"; }

<div class="container mt-4">
    <form action="/farmaceuticos/update/@Model.FarmaceuticosId" method="POST">
        <div class="mb-3">
            <label for="NomeFarmaceutico" class="form-label">Nome:</label>
            <input type="text" name="NomeFarmaceutico" class="form-control" value="@Model.NomeFarmaceutico" />
        </div>

        <div class="mb-3">
            <label for="Email" class="form-label">Email:</label>
            <input type="email" name="Email" class="form-control" value="@Model.Email" />
        </div>

        <div class="mb-3">
            <label for="Senha" class="form-label">Senha:</label>
            <div class="input-group">
                <input type="password" name="Senha" id="senha" class="form-control" value="@Model.Senha" />
                <button type="button" class="btn btn-outline-secondary" onclick="toggleSenha()">Mostrar Senha</button>
            </div>
        </div>

        <div class="mb-3">
            <label for="Telefone" class="form-label">Telefone:</label>
            <input type="text" name="Telefone" class="form-control phone" value="@Model.Telefone" />
        </div>

        <div class="mb-3">
            <label for="Cep" class="form-label">CEP:</label>
            <input type="text" name="Cep" class="form-control cep" value="@Model.Cep" />
        </div>

        <div class="mb-3">
            <label for="NumeroCasa" class="form-label">NÃºmero da Casa:</label>
            <input type="text" name="NumeroCasa" class="form-control" value="@Model.NumeroCasa" />
        </div>

        <div class="mb-3">
            <label for="Cidade" class="form-label">Cidade:</label>
            <input type="text" name="Cidade" class="form-control" value="@Model.Cidade" />
        </div>

        <div class="mb-3">
            <label for="Estado" class="form-label">Estado:</label>
            <input type="text" name="Estado" class="form-control" value="@Model.Estado" />
        </div>

        <button type="submit" class="btn btn-primary">Atualizar</button>
        <a href="/farmaceuticos/index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>

<!-- Adicione o script jQuery Mask Plugin para formatar automaticamente os campos de telefone e CEP -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>

<script>
    $(document).ready(function () {
        $('.phone').mask('(00) 00000-0000');
        $('.cep').mask('00000-000');
    });

    function toggleSenha() {
        var senhaInput = document.getElementById('senha');
        if (senhaInput.type === 'password') {
            senhaInput.type = 'text';
        } else {
            senhaInput.type = 'password';
        }
    }
</script>
