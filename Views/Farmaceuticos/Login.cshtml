@{Layout = "/Views/Shared/Layout.cshtml";}
<!DOCTYPE html>
<head>
    <title>Farmivery</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title>Farmivery</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLeMdY2dmCWGMq92H2CGa5gtU4mk92HdvYe+M/SXH301p5KK9l/S9c/sX" crossorigin="anonymous">
    <style>
        .login-block {
            border: 1px solid #ccc;
            background-color: #fff;
            margin: 0 auto;
            padding: 10px;
        }
    </style>
</head>
<body class="container">

    @if(ViewBag.Erro != null)
    {
        <div class="alert alert-danger">@ViewBag.Erro</div>
    }

    <form action='/farmaceuticos/login' method="post">
        <div class="login-block">
            <div>
                <label>E-mail</label>
                <input type="email" name="Email" class="form-control"/>
            </div>
            <div>
                <label>Senha</label>
                <input type="password" name="Senha" class="form-control"/>
            </div>
            <button class="btn btn-primary">Entrar</button> 
            <a href="/farmaceuticos/create" class="btn btn-success">Cadastrar</a>
        </div>
    </form>
</body>
</html>
