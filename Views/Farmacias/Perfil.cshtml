@model Farmacias

@{
    Layout = "/Views/Shared/LayoutF.cshtml";
}

<div class="container mt-4">
    <h2>Perfil da Farmácia</h2>

    <dl class="row mt-4">
        <div class="col-md-3">
            <dt>Nome:</dt>
        </div>
        <div class="col-md-9">
            <dd>@Model.Nome</dd>
        </div>

        <div class="col-md-3">
            <dt>E-mail:</dt>
        </div>
        <div class="col-md-9">
            <dd>@Model.Email</dd>
        </div>

        <div class="col-md-3">
            <dt>Telefone:</dt>
        </div>
        <div class="col-md-9">
            <dd>@Model.Telefone</dd>
        </div>

        <div class="col-md-3">
            <dt>CEP:</dt>
        </div>
        <div class="col-md-9">
            <dd>@Model.Cep</dd>
        </div>

        <div class="col-md-3">
            <dt>Número da Casa:</dt>
        </div>
        <div class="col-md-9">
            <dd>@Model.NumeroRua</dd>
        </div>

        <div class="col-md-3">
            <dt>Cidade:</dt>
        </div>
        <div class="col-md-9">
            <dd>@Model.Cidade</dd>
        </div>

        <div class="col-md-3">
            <dt>Estado:</dt>
        </div>
        <div class="col-md-9">
            <dd>@Model.Estado</dd>
        </div>
    </dl>

            <div class="mt-3">
                <a href="/farmacias/update/@Model.FarmaciaId" class="btn btn-primary">Atualizar Perfil</a>
                <form method="post" action="/Farmacias/Logout" class="d-inline">
                    <button type="submit" class="btn btn-secondary ms-2">Sair</button>
                </form>
                <br/>
                <br/>
                <form method="post" action="/Farmacias/Delete" class="d-inline">
                    <button type="submit" class="btn btn-danger">Apagar conta</button>
                </form>
            </div>
</div>
