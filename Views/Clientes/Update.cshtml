@model Clientes
@{ Layout = "/Views/Shared/Layout.cshtml"; }

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/clientes/index">Clientes</a></li>
        <li class="breadcrum-item active" aria-current="page">Update</li>
    </ol>
</nav>

<form action="/clientes/update/@Model.ClienteId" method="POST">
    <input name="NomeCliente" class="form-control" value="@Model.NomeCliente" placeholder="Nome" />
    <input name="Email" class="form-control" value="@Model.Email" placeholder="Email" />
    <input name="Senha" type="password" class="form-control" value="@Model.Senha" placeholder="Senha" />

    <!-- Adicione a classe 'phone' ao campo de telefone e a máscara correspondente -->
    <input name="Telefone" class="form-control phone" value="@Model.Telefone" placeholder="Telefone" />

    <!-- Adicione a classe 'cep' ao campo de CEP e a máscara correspondente -->
    <input name="Cep" class="form-control cep" value="@Model.Cep" placeholder="CEP" />

    <input name="NumeroCasa" class="form-control" value="@Model.NumeroCasa" placeholder="Número da Casa" />
    <input name="Cidade" class="form-control" value="@Model.Cidade" placeholder="Cidade" />
    <input name="Estado" class="form-control" value="@Model.Estado" placeholder="Estado" />

    <br/>
    <button class="btn btn-primary">Atualizar</button>
</form>

<br/>
<a href="/clientes/index" class="btn btn-secondary">Cancelar</a>

<!-- Adicione o script jQuery Mask Plugin para formatar automaticamente os campos de telefone e CEP -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>

<script>
    $(document).ready(function () {
        $('.phone').mask('(00) 00000-0000');
        $('.cep').mask('00000-000');
    });
</script>
